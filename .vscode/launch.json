{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CMake Debug (Portable)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,

      "MIMode": "gdb",

      // Try to use the CMake Tools debugger command if available,
      // fall back to your MSYS2 GDB otherwise
      "miDebuggerPath": "${command:cmake.launchTargetDebugger}",
      "windows": {
        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe"
      },

      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],

      "preLaunchTask": "CMake: build"
    }
  ]
}
